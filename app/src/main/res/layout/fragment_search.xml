<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.SearchFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/homeFragmentHeading"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:text="SEARCH" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/search_background"
        android:orientation="horizontal">

        <ImageView
            android:padding="4dp"
            android:layout_gravity="left"
            android:id="@+id/seacrh_fragment_search_image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/search_empty"
            android:scaleType="centerInside"
            android:background="#00ffffff"
            android:onClick="searchButtonClicked"/>

        <EditText
            android:id="@+id/seacrh_fragment_edit_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="Search for News"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_fragement_recyler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

         />



</LinearLayout>